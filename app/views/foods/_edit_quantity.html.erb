<%= form_with(model: food, local: true) do |f| %>
  <div class="form-group btn-group" style="display:inline-flex">
    <%= hidden_field_tag :id, food.id %>
    <%= f.text_field :quantity, class: 'form-control form-control-sm', placeholder: "残量を入力" %>
    <%#= f.text_field :quantity, value: '', class: 'form-control', placeholder: "残量を入力" %>
    <%= f.submit '更新', class: 'btn btn-outline-primary btn-sm' %>
  </div>
<% end %>