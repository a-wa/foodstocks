<div class= "row">
  <div class="offset-3 col-6 offset-3">
    

  <h2>食材追加</h2>
    <%= form_with(model: @food, local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :name, '食品名', class: 'col-3' %>
        <%= f.text_field :name, class: 'col-9 form-control' %>
      </div>

      <div class="form-group row">
        <%= f.label :place, '保管場所', class: 'col-3' %>
        <%= f.select :place, [["冷蔵","冷蔵"], ["冷凍","冷凍"], ["室温","室温"]], include_blank: "選択", class: 'form-control' %>
      </div>

      <div class="form-group row">
        <%= f.label :quantity, '数量・単位', class: 'col-3' %>
        <%= f.text_field :quantity, class: 'col-9 form-control' %>
      </div>

      <div class="form-group row">
        <%= f.label :purchase_date, '購入日', class: 'col-3' %>
        <%= f.date_field :purchase_date, class: 'col-9 form-control' %>
      </div>

      <%= f.submit '追加する', class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= link_to '一覧へ戻る', root_path %>
    
  </div> 
</div>