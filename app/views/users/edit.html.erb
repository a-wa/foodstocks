<div class="container">  
  <div class="row mt-4 justify-content-center">
    
    <div class="col-md-6">
      <div class="card mb-3">
        <div class="card-body">
          <h4 class="mb-5">プロフィール編集</h4>
          <%= form_with(model: @user, local: true) do |f| %>
            <div class="form-group form-row align-items-center mb-5">
              <%= f.label :name, '名前', class: 'col-3 col-sm-2 font-weight-bold' %>
              <%= f.text_field :name, class: 'form-control col-9' %>
            </div>
            <div class="mb-5">
              <h6 class="mb-2 font-weight-bold">アイコン</h6>
              <% if @user.image? %>
                <%#= image_tag @user.image.url, :size => '150x150' , onClick:"$('#upfile').click()" %>
                <%#= f.file_field :image, style:"display:none;", id:"upfile" %>
                <img class = "rounded-circle" src="<%= @user.image %>">
              <% else %>
                <%= image_tag "/assets/default.jpg", :size => '200x200', class: "rounded-circle" %>
                <!--img class = "rounded" src="/assets/default.jpg"-->
              <% end %>
              <div class="small mt-2">
                <%= f.file_field :image %>
              </div>
            </div>
            <div>
              <p><i class="fas fa-lock"></i> パスワードの変更は<%= link_to "こちら", password_edit_user_path %></p>
            </div>
            <div class="mt-3 ml-0"><%= f.submit 'プロフィールを更新', class: 'btn btn-green btn-block' %></div>
          <% end %>
        </div>
      </div>
      <div class="card">
        <%= render "users/leave_family", user: @user %>
      </div>
      <div class="mt-2 mb-4 text-right">
        <%= link_to "戻る", user_path, class:"btn btn-light border" %>
      </div>
    </div>
      
    
  </div>
    
  
</div>