<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-sm-6 col-md-4"> 
      <h4 class="mb-5">パスワード変更</h4>
      <%= form_with(model: @user, local: true) do |f| %>
        <!--div class="form-group form-row align-items-center mb-5" -->
          <%#= f.label :old_password, '現在のパスワード' %>
          <%#= f.password_field :old_password, class: 'form-control' %>
        <!--/div -->
        <div class="form-group form-row align-items-center mb-3">
          <%= f.label :password, '新しいパスワード' %>
          <%= f.password_field :password, class: 'form-control' %>
          
        </div>
        <div class="form-group form-row align-items-center mb-4">
          <%= f.label :password_confirmation, '新しいパスワード（確認用）' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="mt-3 ml-0">
          <%= f.submit 'パスワード変更', class: 'btn btn-green btn-block' %>
        </div>
        <div class="mt-2 mb-2 text-right">
          <%= link_to "戻る", edit_user_path, class:"btn btn-light border" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
