<% if logged_in? %>
  <header class="fixed-top">
    <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:#6a1">
      <a class="navbar-brand" href="/">Foodstocks</a>
      <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent", style="">
        <span class="navbar-toggler-icon"></span>
      </button>
  
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <% if current_user.family_id %>
            <li class="nav-item mr-3"><%= link_to(root_path, class: 'nav-link') do %><i class="fas fa-home"></i> ホーム<% end %></li>
            <li class="nav-item mr-3"><%= link_to(new_food_path, class: 'nav-link') do %><i class="fas fa-plus-circle"></i> 食材追加<% end %></li>
            <li class="nav-item mr-3"><%= link_to(user_path(current_user), class: 'nav-link') do %><i class="fas fa-user"></i> 家族情報<% end %></li>
          <% end %>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item"><%= link_to(logout_path, method: :delete, class: 'nav-link') do %><i class="fas fa-sign-out-alt"></i> ログアウト<% end %></li>
        </ul>
        
      </div>
    </nav>
  </header>
<% end %>