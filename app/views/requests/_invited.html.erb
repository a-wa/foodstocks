<% if unapproved_requests.any? %>
  <ul class="list-unstyled">
    <% requests.each do |request| %>
      <li>
        <div class ='alert alert-success'>
          <%= host_name(request) %>さんから家族（<%= host_family(request) %>）への招待リクエストが来ています！
          <%= form_with(model: request, local: true) do |f| %>
            <%= hidden_field_tag :status, 2 %>
            <%= hidden_field_tag :id, request.id %>
            <%= f.submit '承認' ,class: 'btn btn-primary' %>
          <% end %>
          <%= form_with(model: request, local: true) do |f| %>
            <%= hidden_field_tag :status, 3 %>
            <%= hidden_field_tag :id, request.id %>
            <%= f.submit '拒否', class: 'btn btn-primary' %>
          <% end %>
        </div>
      　
      </li>
    <% end %>
    
  </ul>
<% end %>