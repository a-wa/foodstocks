<div class="">
  <div class="row mt-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h4 class="mb-4">プロフィール</h4>
          
          
          <%= form_with(model: @user, local: true) do |f| %>
            <div class="form-group form-row align-items-center mb-4">
              <%= f.label :name, '名前', class: 'col-3 col-sm-2 font-weight-bold' %>
              <%= f.text_field :name, class: 'form-control col-9' %>
            </div>
            <div class="mb-4">
              <h6 class="mb-2 font-weight-bold">アイコン</h6>
              <% if @user.image? %>
                <%#= image_tag @user.image.url, :size => '150x150' , onClick:"$('#upfile').click()" %>
                <%#= f.file_field :image, style:"display:none;", id:"upfile" %>
                <img class = "rounded-circle" src="<%= @user.image %>">
              <% else %>
                <%= image_tag "/assets/default.jpg", :size => '200x200', class: "rounded-circle" %>
                <!--img class = "rounded" src="/assets/default.jpg"-->
              <% end %>
              <div class="small mt-2">
                <%= f.file_field :image %>
              </div>
            </div>  
            
            <div>
              <%= link_to "パスワードの変更", %>
            </div>
            
            <div class="mt-3 ml-0"><%= f.submit '更新する', class: 'btn btn-success btn-block' %></div>
          <% end %>
         
        </div>
      </div>
      <div class="mt-2 mb-2">
        <%= link_to "戻る", user_path %>
      </div>
    </div>
    
    
    
    
    <div class='col-md-6'>
      <div class="card">
        <%= render "users/leave_family", user: @user %>
      </div>
    </div>
  </div>
</div>