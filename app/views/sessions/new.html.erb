<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="jumbotron mt-4" style="background-color:#fff9e7">
        <div class="mb-4 text-center">
    <!--img class="mb-3" src="/assets/tabemo_logo_a.png" width=180 -->
          <h4>ログイン</h4>
        </div>
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    
          <div class="form-group">
            <%= f.label :email do %><i class="fas fa-envelope"></i> メールアドレス<% end %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
    
          <div class="form-group">
            <%= f.label :password do %><i class="fas fa-lock"></i> パスワード<% end %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
    
          <%= f.submit 'ログイン', class: 'btn btn-success btn-block' %>
        <% end %>
        
        <div class="mt-3 text-center">
          <%= link_to '新規登録', signup_path %>
        </div>
      </div>
    </div>
  </div>
</div>